---
import PageWithTray from '@layouts/PageWithTray.astro';
import AdminTray from '@svelte/admin/AdminTray.svelte';
import CharacterSheetList from '@svelte/admin/sheets/CharacterSheetList.svelte';
import SheetFabs from '@svelte/admin/sheets/SheetFabs.svelte';

const visible = import.meta.env.SECRET_FEATURE_FLAG_Admin_tools === 'true';
---
<PageWithTray title="Characters: Character Sheet Builder" description="Browse and manage character sheet builders.">
  <AdminTray client:only="svelte" slot="app-tray" showLocalTools={visible} />
  <CharacterSheetList client:only="svelte" />
  <SheetFabs client:only="svelte" slot="fab-tray" /> 
</PageWithTray>