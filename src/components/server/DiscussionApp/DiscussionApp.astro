---
import DiscussionSection from 'src/components/svelte/discussion/DiscussionSection.svelte';
import { fetchDiscussion } from 'src/firebase/server/discussion/fetchDiscussion';
import type { Thread } from 'src/schemas/ThreadSchema';

interface Props {
  thread: Thread;
}
const { thread }: Props = Astro.props;

const discussion = await fetchDiscussion(thread.key);
---
<DiscussionSection discussion={discussion} {thread} client:only="svelte"/>
