---
import { fetchDiscussion } from '@firebase/server/discussion/fetchDiscussion';
import type { Thread } from '@schemas/ThreadSchema';
import DiscussionSection from '@svelte/discussion/DiscussionSection.svelte';

interface Props {
  thread: Thread;
}
const { thread }: Props = Astro.props;

const discussion = await fetchDiscussion(thread.key);
---
<DiscussionSection discussion={discussion} {thread} client:only="svelte"/>
