---
import type { Site } from 'src/schemas/SiteSchema';
import { toDisplayString } from 'src/utils/contentHelpers';
import { systemToNoun } from 'src/utils/schemaHelpers';
import { netlifyImage, generateSrcset } from '@utils/images/netlifyImage';
import SiteOwnerToken from '../../svelte/sites/SiteOwnerToken.svelte';

interface Props {
  site: Site;
}
const { site } = Astro.props;

// Generate optimized image URLs for the site poster
// Cards are 170-450px wide, so we use appropriate sizes
// Only use Netlify CDN in production (not available in local dev)
const isProduction = import.meta.env.PROD;
const coverSrc = site.posterURL
  ? isProduction
    ? netlifyImage(site.posterURL, { width: 450, format: 'webp', quality: 85 })
    : site.posterURL
  : undefined;
const coverSrcset = site.posterURL
  ? isProduction
    ? generateSrcset(site.posterURL, [170, 300, 450], {
        format: 'webp',
        quality: 85,
      })
    : undefined
  : undefined;
---

<cn-card
  href={`/sites/${site.key}`}
  noun={systemToNoun(site.system)}
  title={site.name}
  cover={coverSrc}
  srcset={coverSrcset}
  sizes="(max-width: 768px) 100vw, 450px"
  >
  <p class="downscaled">{site.description}</p>

  <div slot="actions" class="toolbar">
    <SiteOwnerToken {site} client:only="svelte"/>
    <div class="grow"></div>
    <p>{toDisplayString(site.flowTime)}</p>
  </div>

  <slot />
</cn-card>