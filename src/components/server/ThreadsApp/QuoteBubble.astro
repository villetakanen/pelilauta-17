---
import ReplyArticle from 'src/components/svelte/discussion/ReplyArticle.svelte';
import { ReplySchema } from 'src/schemas/ReplySchema';

interface Props {
  threadKey: string;
  replyKey: string;
}

const { threadKey, replyKey } = Astro.props;

const replyResponse = await fetch(
  `${Astro.url.origin}/api/replies/${threadKey}/${replyKey}.json`,
);
---
{ replyResponse.ok ? (
  <ReplyArticle reply={ReplySchema.parse(await replyResponse.json())} client:only="svelte"/>
) : (
  <blockquote>
    {threadKey || '-'} / {replyKey || '-'} 404
  </blockquote>
)}