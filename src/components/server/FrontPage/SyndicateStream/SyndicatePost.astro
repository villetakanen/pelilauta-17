type Props = {
  post: {
    title: string;
    contentSnippet: string;
    link: string;
  };
};

const { post } = Astro.props;
---
<section class="border-t pt-1 mb-2">
  <h4 class="downscaled"><a href={post.link} class="hoverable" style="text-decoration: none;">{post.title}</a></h4>
  <p class="downscaled">{post.contentSnippet}</p>
  <p class="text-caption text-right">
    <a href={post.link}>
      {t('actions:readMore')}
    </a></p>
</section>